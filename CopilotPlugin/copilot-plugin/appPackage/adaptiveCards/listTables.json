{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "ðŸ“‹ Database Tables",
          "weight": "bolder",
          "size": "medium"
        },
        {
          "type": "TextBlock",
          "text": "Base ID: ${target.baseId}",
          "wrap": true,
          "weight": "lighter"
        },
        {
          "type": "TextBlock",
          "text": "Found ${data.length} table(s) in this database:",
          "wrap": true
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Tables:",
              "value": "${data}"
            }
          ]
        }
      ]
    }
  ]
}